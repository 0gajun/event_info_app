<% provide(:title, 'カテゴリ編集') %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>カテゴリ編集</h2>
		<%= form_for(@category) do |f| %>
			<%= f.label :name , "名前", class: 'control-label' %>
			<%= f.text_field :name ,class: 'form-control'%>

			<%= f.submit "変更を保存", class: "btn btn-large btn-primary" %>
		<% end %>
		<%= link_to "削除する", category_path(@category.id),class: "btn btn-xs btn-danger delete-btn" , data: {confirm: "#{@category.name}を削除しますがよろしいですか？"}, method: "delete" %>
	</div>
</div>