<% provide(:title, "カテゴリ") %> 
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= link_to "新規作成", new_category_path, class: "btn btn-primary col-md-3 col-md-offset-9" %>
		<table class="table table-striped">
			<caption><h2>カテゴリ一覧</h2></caption>
			<thead>
				<tr>
					<th>ID</th><th>カテゴリ</th>
				</tr>
			</thead>
			<tbody>
				<% @categories.each do |category| %>
					<tr>
						<th><%= category.id %></th>
						<th><%= link_to category.name, edit_category_path(category) %></th>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>