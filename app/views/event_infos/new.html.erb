<% provide(:title, '企画情報新規登録') %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>企画情報新規登録</h2>
		<%= form_for(@eventinfo) do |f| %>
			<%= render 'shared/event_error_messages' %>
			<%= f.label :title , "企画名", class: 'control-label' %>
			<%= f.text_field :title , class: 'form-control'%>

			<%= f.label :categoryid, class: "control-label"%>
			<%= f.collection_select :categoryid, Category.all, :id, :name , prompt: "選択してください", class: "form-control"%>

			<%= f.label :placeid, class: "control-label"%>
			<%= f.collection_select :placeid, Place.all, :id, :name , prompt: "選択してください", class: "form-control"%>

			<%= f.label :sub_placeid, class: "control-label"%>
			<%= f.collection_select :sub_placeid, Subplace.all, :id, :name , include_blank: true, class: "form-control"%>

			<%= f.label :description, "説明文", class: 'control-label' %>
			<%= f.text_area :description ,class: 'form-control'%>

			<%= f.label :userid, "担当者", class: 'control-label' %>
			<%= f.collection_select :userid, User.all, :id, :name, prompt: "選択してください", class: 'form-control'%>

			<%= f.submit "作成", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>