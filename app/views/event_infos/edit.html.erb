<% provide(:title, '企画情報編集') %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>企画情報編集</h2>
		<%= form_for(@eventinfo) do |f| %>
			<%= render 'shared/event_error_messages' %>
			<%= f.label :title, class: 'control-label' %>
			<%= f.text_field :title , class: 'form-control'%>

			<%= f.label :categoryid, class: "control-label"%>
			<%= f.collection_select :categoryid, Category.all, :id, :name , prompt: "選択してください", class: "form-control"%>

			<%= f.label :placeid, class: "control-label"%>
			<%= f.collection_select :placeid, Place.all, :id, :name , prompt: "選択してください", class: "form-control"%>

			<%= f.label :subplace, class: "control-label"%>
			<%= f.text_field :subplace ,class: "form-control"%>

			<%= f.label :description, class: 'control-label' %>
			<%= f.text_area :description ,class: 'form-control'%>

			<%= f.label :userid, class: 'control-label' %>
			<%= f.collection_select :userid, User.all, :id, :name, prompt: "選択してください", class: 'form-control'%>

			<%= f.submit "変更を保存", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
