<% provide(:title, '企画情報編集') %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>企画情報編集</h2>
		<% if current_user.admin? %>
		<div class="admin-info">
			<% if @eventinfo[:pending_approval] %>
				<p class="bg-info">この企画は承認待ちです。</p>
				<%= link_to "承認", event_info_approve_path(id: @eventinfo.id), method: "post", class: "btn btn-primary btn-sm" %>
				<%= link_to "却下", event_info_reject_path(id: @eventinfo.id), method: "post", class: "btn btn-danger btn-sm" %>
				<%if !@eventinfo[:reject_message].blank? %>
					<p>前回のリジェクトメッセージ</p>
					<p class="admin-info"><%= @eventinfo[:reject_message] %></p>
				<% end %>		
			<% end %>	
		</div>
		<% end %>
		<%= form_for(@eventinfo) do |f| %>
			<%= render 'shared/event_error_messages' %>
			<%= f.label :title, class: 'control-label' %>
			<%= f.text_field :title , class: 'form-control'%>

			<%= f.label :image_url, class: 'control-label' %>
			<%= image_tag (@eventinfo.image_url.url) if @eventinfo.image_url? %>
			<%= f.file_field :image_url, class: 'form-control' %>

			<%= f.label :categoryid, class: "control-label"%>
			<%= f.collection_select :categoryid, Category.all, :id, :name , prompt: "選択してください", class: "form-control"%>

			<%= f.label :pickup, class: "control-label" %>
			<%= f.check_box :pickup, class: "form-control" %>

			<%= f.label :placeid, class: "control-label"%>
			<%= f.collection_select :placeid, Place.all, :id, :name , prompt: "選択してください", class: "form-control"%>

			<%= f.label :subplace, class: "control-label"%>
			<%= f.text_field :subplace ,class: "form-control"%>

			<%= f.label :firstday_time, class: "control-label" %>
			<%= f.text_field :firstday_time, class: "form-control" %>

			<%= f.label :secondday_time, class: "control-label" %>
			<%= f.text_field :secondday_time, class: "form-control" %>

			<%= f.label :description, class: 'control-label' %>
			<%= f.text_area :description ,class: 'form-control'%>

			<%= f.label :userid, class: 'control-label' %>
			<%= f.collection_select :userid, User.all, :id, :name, prompt: "選択してください", class: 'form-control'%>

			<%= f.submit "変更を保存", class: "btn btn-large btn-primary" %>
		<% end %>
		<% if current_user.admin? %>
			<%= link_to "削除する", event_info_path(@eventinfo.id),class: "btn btn-xs btn-danger delete-btn" , data: {confirm: "#{@eventinfo.title}を削除しますがよろしいですか？"}, method: "delete" %>
		<% end %>
	</div>
</div>
