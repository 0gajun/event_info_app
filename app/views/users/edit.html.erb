<% provide(:title, 'ユーザ情報編集') %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>ユーザ情報編集</h2>
		<%= form_for(@user) do |f| %>
			<%= render 'shared/user_error_messages' %>
			<%= f.label :name , "名前", class: 'control-label' %>
			<%= f.text_field :name ,class: 'form-control'%>

			<%= f.label :email , "メールアドレス", class: 'control-label' %>
			<%= f.text_field :email ,class: 'form-control'%>

			<%= f.label :group, "団体名", class: 'control-label' %>
			<%= f.text_field :group ,class: 'form-control'%>

			<%= f.label :managerId, class: 'control-label' %>
			<%= f.collection_select :managerId, User.where(staff: true), :id, :name, include_blank: true, class: 'form-control' %>

			<%= f.label :password, "パスワード", class: 'control-label' %>
			<%= f.password_field :password ,class: 'form-control'%>

			<%= f.label :password_confirmation , "パスワード(確認)", class: 'control-label' %>
			<%= f.password_field :password_confirmation ,class: 'form-control'%>

			<%= f.submit "変更を保存", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>